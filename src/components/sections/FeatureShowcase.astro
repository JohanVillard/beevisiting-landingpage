---
import { Image } from "astro:assets";
import loginMobileImage from "../../assets/images/beevisiting-login-mobile.jpg"
import connectivityImage from "../../assets/images/connectivity.jpg";
import visitAdminImage from "../../assets/images/beevisiting-admin-visits.png";
import enLightModeImage from "../../assets/images/beevisiting-en-light-login.jpg";
import hlbtnLightGuideStartImage from "../../assets/images/holbertion-light-guide-start.jpg"
import mediaImage from "../../assets/images/beevisiting-medias.webp";

// Features list for displaying the key highlights

const features = [
  {
    title: "Une visite interactive et immersive", // Feature title
    description:
      "Vos visiteurs vivent une expérience unique ! Suivez chaque étape en temps réel, accédez à du contenu interactif et visualisez facilement le parcours de la visite.", // Feature description
    image: loginMobileImage, // Associated image
    class:
      "content-center border-b border-dashed border-slate-400 py-5 sm:col-span-2 sm:p-5", // Custom CSS classes for layout and styling
    alignment: "mx-auto mt-10 rounded-xl shadow-lg sm:w-[20%]", // Alignment and styling for the image
  },
  {
    title: "Une gestion simplifiée pour les guides",
    description: `Prenez le contrôle total de votre visite ! Programmez les parcours, affichez des visuels en temps réel et ajoutez des participants à la volée. Un outil fiable pour un accompagnement fluide.`,
    image: visitAdminImage,
    class: "content-center py-5 sm:row-start-2 sm:p-5 sm:py-10",
    alignment:
      "ml-auto mr-auto mt-10 w-[100%] rounded-xl shadow-lg sm:ml-0 sm:w-[100%] border border-[rgba(148,163,184,0.5)] dark:border-[rgba(71,85,105,0.1)]",
  },
  {
    title: "Une plateforme adaptée à tous les sites",
    description:
      "Beevisiting fonctionne même en zones à faible connexion. Que votre événement se déroule en intérieur ou en extérieur, l’expérience reste optimale pour chaque utilisateur.",
    image: connectivityImage,
    class:
      "content-center border-t border-dashed border-slate-400 py-5 sm:row-span-2 sm:row-start-2 sm:border-l sm:border-t-0 sm:p-5 sm:text-right",
		alignment: "ml-auto mr-auto mt-10 w-[100%] rounded-xl shadow-lg border border-[rgba(148,163,184,0.5)] dark:border-[rgba(71,85,105,0.2)] sm:mr-0",
  },
  {
    title: "Des données en temps réel",
    description: "Visualisez et synchronisez instantanément chaque étape de la visite. Documents, images, vidéos : tout est mis à jour en direct.",
		image: mediaImage, 
		class: "content-center py-5 sm:p-5",
		alignment: "mx-auto mt-10 w-[60%] rounded-xl shadow-lg",
	},
	{
    title: "Une interface personnalisable",
    description:
      "Administrateurs, adaptez la plateforme à votre image ! Ajoutez votre logo, choisissez vos couleurs.",
    image: hlbtnLightGuideStartImage,
    class:
      "content-center py-5 sm:border-r border-dashed border-slate-400 sm:row-span-5 sm:p-5 sm:text-left",
    alignment: "ml-auto mr-auto mt-10 w-[60%] rounded-xl shadow-lg border border-[rgba(148,163,184,0.5)] dark:border-[rgba(71,85,105,0.15)]",
		},
  {
    title: "Accessibilité et flexibilité",
    description: "Affichage personnalisable avec choix de langue (français, anglais, espagnol), mode sombre activable pour un meilleur confort visuel et accès à la visite aussi bien sur site qu'à distance.",
    image: enLightModeImage, // Vous pouvez utiliser une nouvelle image ou une image existante
    class: "content-center py-5 sm:border-l border-dashed border-slate-400 sm:p-5 sm:text-right", // Classe CSS (personnalisation)
		alignment: "mx-auto mt-10 w-[60%] rounded-xl shadow-2xl border border-[rgba(148,163,184,0.5)] dark:border-[rgba(71,85,105,0.15)]",
     // Alignement de l'image
		},
  {
    title: "Une expérience optimisée pour tous",
    class: "content-center border-t border-dashed border-slate-400 py-5 sm:p-5 sm:col-span-2",
    moreFeatures: [
		"Visiteurs : Immersion interactive, consultation du sommaire, carrousel d'images, avis en fin de parcours. ",
      "Guides : Présentation dynamique, flexibilité des supports, ajout d'invités en cours de route.",
      "Administrateurs : Gestion des utilisateurs, création de visites variées, ajout de contenus multimédia.",
      "Create custom reports that tell your data's story exactly how you want",
    ],
		},
];
---

<div class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20">
  
  <div
    class="mx-auto grid max-w-[85rem] px-4 pb-10 sm:grid-cols-2 sm:grid-rows-5 sm:px-6 lg:px-8 lg:pb-14"
  >
    {
      features.map((feature) => (
        <div class={`${feature.class}`}>
          <h2 class="text-2xl font-bold text-slate-600">{feature.title}</h2>

          <p class="mt-2 text-base/6 text-slate-600">
            <Fragment set:html={feature.description || ""} />
          </p>

          {feature.image && (
            <Image
              class={`${feature.alignment || ""}`}
              src={feature.image}
              alt=""
            />
          )}

          {feature.moreFeatures && (
            <ul class="ml-4 mt-4 w-4/5 list-inside list-disc space-y-2 text-base/6 text-slate-600 marker:text-yellow-600">
              {feature.moreFeatures.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          )}
        </div>
      ))
    }
  </div>
</div>
